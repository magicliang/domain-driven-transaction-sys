<?xml version="1.0" encoding="UTF-8"?>
<!--
    status : 这个用于设置log4j2自身内部的信息输出，可以不设置，当设置成trace时，会看到log4j2内部各种详细输出
    monitorInterval：Log4j能够自动检测修改配置文件和重新配置本身，设置间隔秒数。
-->
<Configuration status="warn" name="MyApp" packages="" monitorInterval="600">
    <Appenders>
        <!--这个输出控制台的配置-->
        <Console name="Console" target="SYSTEM_OUT">
            <!-- 控制台只输出level及以上级别的信息(onMatch),其他的直接拒绝(onMismatch) -->
            <Filters>
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <!-- 输出日志的格式 -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M - %msg%xEx%n"/>
        </Console>
        <RollingRandomAccessFile name="biz-log-appender"
                                 fileName="${log-path}/app.log"
                                 immediateFlush="true"
                                 filePattern="${log-path}/app.log.%d{yyyyMMdd}">
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"
                                           modulate="true"/>
                <SizeBasedTriggeringPolicy size="250MB"/>
            </Policies>
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M - %msg%xEx%n</Pattern>
            </PatternLayout>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <!-- 配置日志的根节点 -->
        <Root level="info">
            <!-- 生产环境禁用 -->
            <appender-ref ref="Console"/>
            <AppenderRef ref="biz-log-appender"/>
        </Root>
        <logger name="com.magicliang.transaction.sys" level="info" additivity="false">
            <appender-ref ref="Console"/>
            <AppenderRef ref="biz-log-appender"/>
        </logger>

        <logger name="org.springframework.beans.factory.support" level="error" additivity="false"/>
    </Loggers>
</Configuration>